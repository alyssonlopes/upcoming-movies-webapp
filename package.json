{
  "name": "upcoming-movies-webapp",
  "version": "1.0.0",
  "author": {
    "name": "Alysson Sousa",
    "github": "https://github.com/alyssonlopes"
  },
  "scripts": {
    "client": "cd frontend && npm start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev:server": "cd frontend && npm run build && cd .. && npm start",
    "start": "node server.js",
    "heroku-postbuild": "cd frontend && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alyssonlopes/upcoming-movies-webapp.git"
  },
  "keywords": [
    "node",
    "express",
    "react-app"
  ]
}
